# overwrite stock lightdm greeter configuration
if [ -d /etc/armbian/lightdm/lightdm.conf.d/11-armbian.conf ]; then sed -i 's/user-session=xfce/user-session=icewm-session/g' /etc/armbian/lightdm/lightdm.conf.d/11-armbian.conf; fi

if [ -d /etc/armbian/lightdm ]; then cp -R /etc/armbian/lightdm /etc/; fi
sed -i "s/


# Disable Pulseaudio timer scheduling which does not work with sndhdmi driver
if [ -f /etc/pulse/default.pa ]; then sed "s/load-module module-udev-detect$/& tsched=0/g" -i  /etc/pulse/default.pa; fi

# set wallpapper to armbian
# edit skel .progile to add background for i3wm
cat << EOF >> /etc/skel/.profile
feh -bg-fill /usr/share/backgrounds/armbian/armbian03-Dre0x-Minum-dark-3840x2160.jpg
EOF
